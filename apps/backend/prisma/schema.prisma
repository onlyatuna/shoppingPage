// 定義資料庫連線
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 產生 TypeScript Client
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

// --------------------------------------
// Enums (列舉): 統一狀態管理，避免魔法字串
// --------------------------------------

enum Role {
  USER
  ADMIN
  DEVELOPER
}

enum OrderStatus {
  PENDING     // 待付款
  PAID        // 已付款/待出貨
  SHIPPED     // 已出貨
  COMPLETED   // 已完成
  CANCELLED   // 已取消
}

// --------------------------------------
// Models (資料表定義)
// --------------------------------------

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // 加密後的 Hash
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 關聯
  cart      Cart?    // 一個使用者只有一個購物車
  orders    Order[]
  addresses Address[]

  @@map("users") // 對應資料庫表名為 users
}

model Address {
  id        Int     @id @default(autoincrement())
  recipient String  // 收件人姓名
  phone     String
  city      String
  address   String  // 詳細地址
  isDefault Boolean @default(false)
  
  userId    Int
  user      User    @relation(fields: [userId], references: [id])

  @@map("addresses")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique // 網址用，例如: /category/electronics
  products  Product[]

  @@map("categories")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique // 網址用，例如: /product/iphone-15
  description String?  @db.Text
  
  // 金錢務必使用 Decimal，避免 JS 浮點數誤差
  price       Decimal  @db.Decimal(10, 2) 
  
  // 庫存管理
  stock       Int      @default(0)
  
  // 圖片：使用 JSON 陣列儲存多張圖 ["url1", "url2"]，比開新表更有效率
  images      Json?    
  
  isActive    Boolean  @default(true) // 軟刪除/上下架控制
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])

  cartItems   CartItem[]
  orderItems  OrderItem[]

  // 建立索引以加速搜尋
  @@index([name])
  @@index([categoryId])
  @@map("products")
}

// --------------------------------------
// 購物車模組 (Server State)
// --------------------------------------

model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  items     CartItem[]
  updatedAt DateTime   @updatedAt

  @@map("carts")
}

model CartItem {
  id        Int      @id @default(autoincrement())
  quantity  Int      @default(1)
  
  cartId    Int
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])

  // 複合唯一鍵：確保同一個購物車內，同一個商品只會有一筆紀錄 (數量疊加)
  @@unique([cartId, productId])
  @@map("cart_items")
}

// --------------------------------------
// 訂單模組 (Transaction Core)
// --------------------------------------

model Order {
  id            String      @id @default(uuid()) // 使用 UUID 防止被猜測訂單量
  userId        Int
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  status        OrderStatus @default(PENDING)
  totalAmount   Decimal     @db.Decimal(10, 2)
  
  // 收件資訊快照：下單當下的地址 (防止使用者事後改地址表影響歷史訂單)
  shippingInfo  Json        
  
  paymentId     String?     // 第三方金流編號 (如綠界/Stripe ID)

  // [新增] 用來存 LINE Pay 回傳的完整 JSON (Debug 用)
  paymentData   Json?     
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  items         OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  
  quantity  Int
  
  // 重點：記錄「購買當下」的單價，而非關聯 Product 表的目前價格
  price     Decimal  @db.Decimal(10, 2) 

  @@map("order_items")
}